@page
@model SocialFit.Pages.Clients.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="container-cadastro" >
        <h5 style="text-align: center; font-size: 1.5rem">Criar conta</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-form">
                <label asp-for="Client.Login">Email</label>
                <input asp-for="Client.Login" />
                <span asp-validation-for="Client.Login" class="text-danger"></span>
            </div>

            <div class="input-form">
                <label asp-for="Client.Password">Senha</label>
                <input type="password" asp-for="Client.Password" maxlength="8" />
                <span asp-validation-for="Client.Password" class="text-danger"></span>
            </div>

            <div class="input-form">
                <label class="control-label">Repetir senha</label>
                <input type="password" name="repeat-passwd" maxlength="8" />
                <span class="text-danger"></span>
            </div>
            <button type="submit" class="btn-cadastrar">Tornar-me membro</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
